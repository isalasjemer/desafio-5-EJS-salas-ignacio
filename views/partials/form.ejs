<div class="container bg-light py-3 w-50">
    <h1>Ingrese Productos</h1>
    <form action="/productos" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">Nombre:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Ingrese el nombre del producto" required>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Precio:</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Ingrese el precio del producto" required>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Foto URL:</label>
            <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="Ingrese URL de la imagen del producto" required>
          </div>
          <div class="text-right">
              <a class="btn btn-outline-success" href="/productos">Ver Productos</a>
            <button type="submit" class="btn btn-success">Enviar</button>
          </div>
    </form>
</div>